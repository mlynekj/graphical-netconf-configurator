<config>
<configuration xmlns="http://yang.juniper.net/junos">
<security>
    <ike>
        <proposal>
            <name></name>
            <authentication-method>pre-shared-keys</authentication-method>
            <dh-group></dh-group>
            <authentication-algorithm></authentication-algorithm>
            <encryption-algorithm></encryption-algorithm>
            <lifetime-seconds></lifetime-seconds>
        </proposal>
        <policy>
            <name></name>
            <mode>main</mode>
            <proposals></proposals>
            <pre-shared-key>
                <ascii-text></ascii-text>
            </pre-shared-key>
        </policy>
        <gateway>
            <name></name>
            <ike-policy></ike-policy>
            <address></address>
            <external-interface></external-interface>
        </gateway>
    </ike>
    <ipsec>
        <proposal>
            <name></name>
            <authentication-algorithm></authentication-algorithm>
            <encryption-algorithm></encryption-algorithm>
            <lifetime-seconds></lifetime-seconds>
        </proposal>
        <policy>
            <name></name>
            <proposals></proposals>
        </policy>
        <vpn>
            <name></name>
            <ike>
                <gateway></gateway>
                <ipsec-policy></ipsec-policy>
            </ike>
            <establish-tunnels>on-traffic</establish-tunnels>
        </vpn>
    </ipsec>
    <address-book>
        <name>untrusted</name>
        <address>
            <name></name>
            <ip-prefix></ip-prefix>
        </address>
        <attach>
            <zone>
                <name>untrust</name>
            </zone>
        </attach>
    </address-book>
    <address-book>
        <name>trusted</name>
        <address>
            <name></name>
            <ip-prefix></ip-prefix>
        </address>
        <attach>
            <zone>
                <name>trust</name>
            </zone>
        </attach>
    </address-book>
    <flow>
        <tcp-mss>
            <ipsec-vpn>
                <mss>1350</mss>
            </ipsec-vpn>
        </tcp-mss>
    </flow>
    <policies>
        <policy>
            <from-zone-name>trust</from-zone-name>
            <to-zone-name>untrust</to-zone-name>
            <policy>
                <name></name>
                <match>
                    <source-address></source-address>
                    <destination-address></destination-address>
                    <application>any</application>
                </match>
                <then>
                    <permit>
                        <tunnel>
                            <ipsec-vpn></ipsec-vpn>
                        </tunnel>
                    </permit>
                </then>
            </policy>
        </policy>
        <policy>
            <from-zone-name>untrust</from-zone-name>
            <to-zone-name>trust</to-zone-name>
            <policy>
                <name></name>
                <match>
                    <source-address></source-address>
                    <destination-address></destination-address>
                    <application>any</application>
                </match>
                <then>
                    <permit>
                        <tunnel>
                            <ipsec-vpn></ipsec-vpn>
                        </tunnel>
                    </permit>
                </then>
            </policy>
        </policy>
    </policies>
</security>
</configuration>
</config>